<h1>Listing project_files</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Path</th>
    <th>Size</th>
    <th>Format</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @project_files.each do |project_file| %>
  <tr>
    <td><%= project_file.name %></td>
    <td><%= project_file.path %></td>
    <td><%= project_file.size %></td>
    <td><%= project_file.format %></td>
    <td><%= link_to 'Show', project_file %></td>
    <td><%= link_to 'Edit', edit_project_file_path(project_file) %></td>
    <td><%= link_to 'Destroy', project_file, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

